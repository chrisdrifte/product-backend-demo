{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@product-backend/clients/indexA": ["clients/indexA/src/index.ts"],
      "@product-backend/clients/indexB": ["clients/indexB/src/index.ts"],
      "@product-backend/clients/localKv": ["clients/localKv/src/index.ts"],
      "@product-backend/clients/memDb": ["clients/memDb/src/index.ts"],
      "@product-backend/clients/wsBroker": ["clients/wsBroker/src/index.ts"],
      "@product-backend/helpers": ["libs/helpers/src/index.ts"],
      "@product-backend/queue": ["libs/queue/src/index.ts"],
      "@product-backend/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
